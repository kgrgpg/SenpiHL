# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (TimescaleDB)
DATABASE_URL=postgresql://postgres:password@localhost:5432/pnl_indexer
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379

# Hyperliquid API
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws

# Hybrid Mode (WebSocket + Polling) - Recommended for thousands of traders
USE_HYBRID_MODE=true
POLL_INTERVAL_MS=300000  # Position snapshot poll interval in hybrid mode (5 minutes)

# Legacy Polling Intervals (used when USE_HYBRID_MODE=false)
POSITION_POLL_INTERVAL=30000
FILLS_POLL_INTERVAL=300000
FUNDING_POLL_INTERVAL=3600000

# Snapshot Configuration
SNAPSHOT_INTERVAL=60000
BACKFILL_DAYS=30

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
